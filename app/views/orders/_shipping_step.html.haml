- content_for :title, "Order"

.content.container
  .row
    .span6
      %h3 Order Progress
      .progress
        .bar{ style: "width: #{@order.progress}%" }
      = simple_form_for(@order, :url => user_order_path, :html => {:class => 'card_form form-vertical' }) do |f|
        = f.error_notification
        = display_base_errors @order

        %h3 Shipping Information
        .row-fluid
          .span12
            = f.input :address, input_html: {class: "input-block-level"}
        .row-fluid
          .span4
            = f.input :city, input_html: {class: "input-block-level"}
          .span4
            = f.input :state, input_html: {class: "input-block-level"}
          .span4
            = f.input :zipcode, input_html: {class: "input-block-level"}, label: "Postal Code"

        %br

        .row-fluid
          .span12
            = f.button :submit, 'Continue', :class => "btn btn-info btn-large btn-block"

    .span6.text-right
      .row-fluid
        .span9.offset3
          %h2 Price
          %p
            %span.dollar-desc 5 Gallon Malt Extract Beer Kit:
            %span $35
          %p
            %span.dollar-desc Shipping:
            %span $15
          %hr
          %p.lead
            Total per month: $50
          %hr

      .row-fluid
        .span9.offset3
          %h3 When We Ship
          %p We ship the third Monday of every month so you get it before the weekend.
          %hr

      .row-fluid
        .span9.offset3
          %h3
            %i.fa.fa-lock
            Your information is secure!
          %p We won't give your credit card or personal information to anyone for any reason.  You can trust that all of your information is secure.
          %hr
      .row-fluid
        .span9.offset3
          %h3 Questions?
          %p
            Feel free to contact us with any questions you may have.  Simply click
            = link_to "here", contact_path
            to visit our contact page.
