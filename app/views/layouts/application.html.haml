!!!
%html
  %head
    %meta{:content => "width=1024", :name => "viewport"}
    %title= sexy_title content_for(:title)
    %meta{:content => content_for?(:description) ? yield(:description) : "HomeBrewster", :name => "description"}
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    = yield(:head)
  %body{:class => "#{controller_name} #{action_name}" + (current_page?(root_path) == true ? "" : "body_space")}
    #wrap
      .navbar.navbar-fixed-top.navbar-inverse.navbar-space
        %nav.navbar-inner
          .container
            = render 'layouts/navigation'

      - if current_page? root_path
        = render "layouts/mega_header"

      .container
        = render 'layouts/messages'
      = yield
      #push

    #footer
      .container
        .row
          .span12
            %ul
              %li= link_to "Blog", "http://blog.homebrewster.com"
              %li= link_to "FAQ", faq_path
              %li= link_to "Meet the Team", team_path
              %li= link_to "Contact Us", contact_path
              %li= link_to "Feedback", contact_path

    :javascript
