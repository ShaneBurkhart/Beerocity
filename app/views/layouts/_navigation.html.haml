= link_to "Home Brewster", current_user ? content_path : root_path, :class => 'site-logo'
%ul.site-nav.pages-nav
  %li
    = nav_link 'Pricing', new_user_registration_path
  %li
    = nav_link 'FAQ', faq_path

%ul.site-nav.pull-right
  - if user_signed_in?
    - if current_user.has_role? :admin
      %li
        = nav_link 'Admin', users_path
      %li
        = nav_link 'Recipes', recipes_path

    %li
      = nav_link "This Month's Recipe", content_path
    %li
      = nav_link 'Edit account', edit_user_registration_path
    %li
      = nav_link 'Logout', destroy_user_session_path, :method=>'delete'
  - else
    %li
      = nav_link 'Login', new_user_session_path, class: "discrete"
    %li
      %strong
        = link_to'Start Brewing Great Beer!', new_user_registration_path, class: "btn btn-danger btn-eye-catcher"

